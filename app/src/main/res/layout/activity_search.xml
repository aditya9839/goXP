<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/test2"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/log_in"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/location3" />
                <EditText
                    android:id="@+id/search_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:textColorHint="@color/light_gray"
                    android:maxLines="3"
                    android:layout_toLeftOf="@+id/clear"
                    android:layout_toRightOf="@+id/search"
                    android:imeOptions="actionSearch"
                    android:background="@null"
                    android:drawablePadding="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"/>
                <ImageView
                    android:id="@+id/clear"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/pencil" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/docTypeLayout"
            android:layout_marginTop="@dimen/_230sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/log_in"
            android:layout_height="@dimen/_43sdp">
            <RelativeLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/docIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/plus" />
                <AutoCompleteTextView
                    android:id="@+id/docSpecilization"
                    android:layout_width="match_parent"
                    android:hint="Service Type"
                    android:textColorHint="@color/light_gray"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/docIcon"
                    android:imeOptions="actionSearch"
                    android:background="@null"
                    android:focusable="true"
                    android:drawablePadding="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_layout"
            android:layout_marginLeft="@dimen/_17sdp"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_2sdp">


        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/searchdoctors"
            android:layout_width="match_parent"
            android:layout_marginTop="500dp"
            android:textColor="#fff"
            android:text="SEARCH"
            android:background="@color/blue"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>